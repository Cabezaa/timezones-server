{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "parserOptions": {
    "ecmaVersion": 12
    },
    "rules": {
        "node/no-unpublished-require": 0,
        "node/no-missing-require": 0
    },
    "plugins": [
        "mocha"
    ]
}
